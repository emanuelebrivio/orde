@import ('nib')
@import url('//fonts.googleapis.com/css?family=Open+Sans:300,400,600,700')


_accent = #2ECC71

.open-sans
  font-family 'Open Sans', sans-serif

.pure-g [class *='pure-u'],
.pure-g-r [class*="pure-u"]
  @extends .open-sans

html,
body
  width 100%
  height 100%
  @extends .open-sans

.pure-form
  input[type='text'], input[type='password'], input[type='email'], input[type='url'], input[type='date'], input[type='month'], input[type='time'], input[type='datetime'], input[type='datetime-local'], input[type='week'], input[type='number'], input[type='search'], input[type='tel'], input[type='color'], select, textarea
    @extends .open-sans
  button
    @extends .open-sans
  
.pure-button
  background _accent
  border none
  color #FFF
  font-weight 600
  &:hover,
  &:focus,
  &:active
    background darken(_accent, 10%)

.container
  width 960px
  margin auto

.page
  width 100%
  height auto

h1, h2, h3
  font-weight 400
h4, h5, h6
  font-weight 600

_spacer = 5, 10, 20, 40, 60, 80, 100, 150

for _val in _spacer
  .spacer-{ _val }
    height ( _val * 1px )

.text-left
  text-align left
.text-center
  text-align center
.text-right
  text-align right

a.link
  text-decoration none
  color #333
  box-shadow inset 0 -2px 0 rgba(#333, 0.2)
  transition color 0.3s ease, box-shadow 0.3s ease
  display inline-block
  &:hover
    color _accent
    box-shadow inset 0 -2px 0 rgba(_accent, 0.3)


span#result
  display inline-block
  font-weight 600
  margin-left 30px
  color #CCC
  &.okay
    color _accent
    
    
ul#decomposed
  list-style none
  padding 0
  margin 0
  padding 20px
  border 1px solid #DDD
  border-radius 3px
  display inline-block
  li
    display inline-block
    width 50px
    height 50px
    line-height 50px
    text-align center
    font-size 2em
    cursor move
    &.decomposed-ghost
      color _accent
    